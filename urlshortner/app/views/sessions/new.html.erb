<style>
  #toast-container{
    top: 20px;
    right: 10px;
  }

</style>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1>Login</h1>
    <%= form_tag '/login' do %>
        Email: <%= text_field_tag :email ,'',class: 'form-control' ,required: 'true'%>
        Password: <%= password_field_tag :password ,'',class: 'form-control' ,required: 'true'%>
        <br>
        <%= submit_tag "Submit" %>

    <% end %>
  </div>
</div>