<% provide(:title, "New Shorty") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Short Url</h1>
    <%= form_for(@short_url, url: short_urls_path) do |f| %>

        <%= f.label :original_url %>
        <%= f.text_field :original_url, class: 'form-control',required: 'true' %>
        <%= f.label :short_url %>
        <%= f.text_field :shorty, class: 'form-control',disabled: true %>

        <%= f.hidden_field :user_id, value: current_user.id %></br>
        <%= f.hidden_field :visits_count, value: "0" %></br>

        <%= f.submit "Generate shortUrl", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
